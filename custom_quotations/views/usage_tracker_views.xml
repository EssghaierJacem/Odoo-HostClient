<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_user_usage_tracker_tree" model="ir.ui.view">
        <field name="name">user.usage.tracker.tree</field>
        <field name="model">user.usage.tracker</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user_id"/>
                <field name="subscription_type"/>
                <field name="quotation_count"/>
                <field name="invoice_count"/>
                <field name="free_quotations_remaining"/>
                <field name="free_invoices_remaining"/>
                <field name="monthly_extra_charge"/>
                <field name="total_quotation_amount"/>
                <field name="total_invoice_amount"/>
            </tree>
        </field>
    </record>

    <record id="view_user_usage_tracker_form" model="ir.ui.view">
        <field name="name">user.usage.tracker.form</field>
        <field name="model">user.usage.tracker</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="reset_monthly_charges" 
                            string="Reset Monthly Charges" 
                            type="object" 
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="user_id"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Subscription">
                            <field name="subscription_type"/>
                            <field name="saas_plan_id"/>
                            <field name="subscription_fee"/>
                            <field name="monthly_extra_charge"/>
                        </group>
                        <group string="Document Pricing">
                            <field name="quotation_unit_price"/>
                            <field name="invoice_unit_price"/>
                            <field name="free_quotations_remaining"/>
                            <field name="free_invoices_remaining"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Usage Statistics">
                            <group>
                                <group string="Quotations">
                                    <field name="quotation_count"/>
                                    <field name="paid_quotations"/>
                                    <field name="total_quotation_amount"/>
                                </group>
                                <group string="Invoices">
                                    <field name="invoice_count"/>
                                    <field name="paid_invoices"/>
                                    <field name="total_invoice_amount"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_user_usage_tracker_search" model="ir.ui.view">
        <field name="name">user.usage.tracker.search</field>
        <field name="model">user.usage.tracker</field>
        <field name="arch" type="xml">
            <search>
                <field name="user_id"/>
                <field name="subscription_type"/>
                <filter string="Free Users" name="free_users" domain="[('subscription_type', '=', 'free')]"/>
                <filter string="Pay Per Use" name="pay_per_use" domain="[('subscription_type', '=', 'pay_per_use')]"/>
                <filter string="Premium" name="premium" domain="[('subscription_type', '=', 'premium')]"/>
                <group expand="0" string="Group By">
                    <filter string="Subscription Type" name="group_by_subscription" context="{'group_by': 'subscription_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_user_usage_tracker" model="ir.actions.act_window">
        <field name="name">Usage Tracker</field>
        <field name="res_model">user.usage.tracker</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first usage tracker!
            </p>
            <p>
                Track and manage user subscriptions and document usage limits.
            </p>
        </field>
    </record>

    <menuitem id="menu_usage_tracker_root"
              name="Usage Tracker"
              sequence="50"/>

    <menuitem id="menu_usage_tracker"
              name="Usage Tracker"
              parent="menu_usage_tracker_root"
              action="action_user_usage_tracker"
              sequence="1"/>

    <record id="ir_cron_reset_monthly_charges" model="ir.cron">
        <field name="name">Reset Monthly Usage Charges</field>
        <field name="model_id" ref="model_user_usage_tracker"/>
        <field name="state">code</field>
        <field name="code">model.search([]).reset_monthly_charges()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">months</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
    </record>
</odoo> 
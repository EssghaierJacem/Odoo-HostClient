<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View for User (Add Subscription Fields) -->
    <record id="view_users_form_inherit_subscription" model="ir.ui.view">
        <field name="name">res.users.form.inherit.subscription</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Subscription &amp; Usage" name="subscription">
                    <field name="usage_tracker_ids" widget="one2many" context="{'default_user_id': active_id}">
                        <tree>
                            <field name="subscription_type"/>
                            <field name="quotation_count"/>
                            <field name="invoice_count"/>
                            <field name="free_quotations_remaining"/>
                            <field name="free_invoices_remaining"/>
                            <field name="monthly_extra_charge"/>
                            <field name="total_quotation_amount"/>
                            <field name="total_invoice_amount"/>
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <group string="Subscription">
                                        <field name="subscription_type"/>
                                        <field name="saas_plan_id"/>
                                        <field name="subscription_fee"/>
                                        <field name="monthly_extra_charge"/>
                                    </group>
                                    <group string="Document Pricing">
                                        <field name="quotation_unit_price"/>
                                        <field name="invoice_unit_price"/>
                                        <field name="free_quotations_remaining"/>
                                        <field name="free_invoices_remaining"/>
                                    </group>
                                </group>
                                <notebook>
                                    <page string="Usage Statistics">
                                        <group>
                                            <group string="Quotations">
                                                <field name="quotation_count"/>
                                                <field name="paid_quotations"/>
                                                <field name="total_quotation_amount"/>
                                            </group>
                                            <group string="Invoices">
                                                <field name="invoice_count"/>
                                                <field name="paid_invoices"/>
                                                <field name="total_invoice_amount"/>
                                            </group>
                                        </group>
                                    </page>
                                </notebook>
                            </sheet>
                        </form>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Inherit Tree View for User (Show Subscription Column) -->
    <record id="view_users_tree_inherit_subscription" model="ir.ui.view">
        <field name="name">res.users.tree.inherit.subscription</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">
            <field name="login" position="after">
                <field name="subscription_type"/>
                <field name="monthly_extra_charge"/>
            </field>
        </field>
    </record>
</odoo>

<odoo>
    <menuitem id="menu_subscription_plan_root" name="Subscription Plan" sequence="10"/>
    <record id="action_subscription_plan_dashboard" model="ir.actions.act_window">
        <field name="name">Subscription Plan</field>
        <field name="res_model">subscription.plan</field>
        <field name="view_mode">form,kanban</field>
        <field name="context">{"search_default_singleton": 1}</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p>No subscription plan data. Please contact your administrator or use the Sync from Host button.</p>
        </field>
    </record>
    <menuitem id="menu_subscription_plan_dashboard" name="Dashboard" parent="menu_subscription_plan_root" action="action_subscription_plan_dashboard" sequence="20"/>

    <record id="view_subscription_plan_kanban" model="ir.ui.view">
        <field name="name">subscription.plan.kanban</field>
        <field name="model">subscription.plan</field>
        <field name="arch" type="xml">
            <kanban default_group_by="abonnement_type">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <h3><field name="abonnement_type" readonly="1"/></h3>
                            <div>Max Quotations: <field name="max_quotations" readonly="1"/></div>
                            <div>Quotations Used: <field name="used_quotations" readonly="1"/></div>
                            <div>Quotations Left: <field name="quotations_left" readonly="1"/></div>
                            <div>Quotation Price: <field name="quotation_price" readonly="1"/></div>
                            <div>Max Invoices: <field name="max_invoices" readonly="1"/></div>
                            <div>Invoices Used: <field name="used_invoices" readonly="1"/></div>
                            <div>Invoices Left: <field name="invoices_left" readonly="1"/></div>
                            <div>Invoice Price: <field name="invoice_price" readonly="1"/></div>
                            <div>Total Sum: <field name="total_sum" widget="monetary" readonly="1"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_subscription_plan_form" model="ir.ui.view">
        <field name="name">subscription.plan.form</field>
        <field name="model">subscription.plan</field>
        <field name="arch" type="xml">
            <form string="Subscription Plan" create="false" edit="false" delete="false">
                <sheet>
                    <group>
                        <field name="abonnement_type" readonly="1"/>
                        <field name="max_quotations" readonly="1"/>
                        <field name="used_quotations" readonly="1"/>
                        <field name="quotations_left" readonly="1"/>
                        <field name="quotation_price" readonly="1"/>
                        <field name="max_invoices" readonly="1"/>
                        <field name="used_invoices" readonly="1"/>
                        <field name="invoices_left" readonly="1"/>
                        <field name="invoice_price" readonly="1"/>
                        <field name="total_sum" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="ir_cron_sync_subscription_plan" model="ir.cron">
        <field name="name">Sync Subscription Plan from Host</field>
        <field name="model_id" ref="model_subscription_plan"/>
        <field name="state">code</field>
        <field name="code">model.cron_sync_subscription_plan()</field>
        <field name="interval_number">10</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>
</odoo> 
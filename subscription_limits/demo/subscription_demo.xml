<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Demo Users -->
        <record id="demo_user_1" model="res.users">
            <field name="name">John Doe</field>
            <field name="login">john.doe@demo.com</field>
            <field name="email">john.doe@demo.com</field>
            <field name="password">demo123</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="demo_user_2" model="res.users">
            <field name="name">Jane Smith</field>
            <field name="login">jane.smith@demo.com</field>
            <field name="email">jane.smith@demo.com</field>
            <field name="password">demo123</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Demo Subscription Users -->
        <record id="demo_subscription_user_1" model="subscription.user">
            <field name="user_id" ref="demo_user_1"/>
            <field name="plan_id" ref="subscription_plan_basic"/>
            <field name="state">active</field>
            <field name="start_date" eval="(DateTime.today() - relativedelta(months=1)).strftime('%Y-%m-%d')"/>
            <field name="total_paid">29.00</field>
        </record>

        <record id="demo_subscription_user_2" model="subscription.user">
            <field name="user_id" ref="demo_user_2"/>
            <field name="plan_id" ref="subscription_plan_professional"/>
            <field name="state">active</field>
            <field name="start_date" eval="(DateTime.today() - relativedelta(months=2)).strftime('%Y-%m-%d')"/>
            <field name="total_paid">158.00</field>
        </record>

        <!-- Demo Sales Orders -->
        <record id="demo_sale_order_1" model="sale.order">
            <field name="name">SO001</field>
            <field name="partner_id" ref="base.res_partner_1"/>
            <field name="user_id" ref="demo_user_1"/>
            <field name="date_order" eval="DateTime.now()"/>
            <field name="state">sale</field>
        </record>

        <record id="demo_sale_order_2" model="sale.order">
            <field name="name">SO002</field>
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="user_id" ref="demo_user_1"/>
            <field name="date_order" eval="DateTime.now()"/>
            <field name="state">sale</field>
        </record>

        <record id="demo_sale_order_3" model="sale.order">
            <field name="name">SO003</field>
            <field name="partner_id" ref="base.res_partner_3"/>
            <field name="user_id" ref="demo_user_2"/>
            <field name="date_order" eval="DateTime.now()"/>
            <field name="state">sale</field>
        </record>

        <!-- Demo Invoices -->
        <record id="demo_invoice_1" model="account.move">
            <field name="name">INV001</field>
            <field name="partner_id" ref="base.res_partner_1"/>
            <field name="user_id" ref="demo_user_1"/>
            <field name="move_type">out_invoice</field>
            <field name="invoice_date" eval="DateTime.today()"/>
            <field name="state">posted</field>
        </record>

        <record id="demo_invoice_2" model="account.move">
            <field name="name">INV002</field>
            <field name="partner_id" ref="base.res_partner_2"/>
            <field name="user_id" ref="demo_user_2"/>
            <field name="move_type">out_invoice</field>
            <field name="invoice_date" eval="DateTime.today()"/>
            <field name="state">posted</field>
        </record>
    </data>
</odoo> 
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend User Form View -->
        <record id="view_users_form_subscription" model="ir.ui.view">
            <field name="name">res.users.form.subscription</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Subscriptions" name="subscriptions">
                        <group>
                            <group>
                                <field name="active_subscription_id" readonly="1"/>
                                <field name="total_sales_orders" readonly="1"/>
                                <field name="total_invoices" readonly="1"/>
                            </group>
                        </group>
                        <div class="row">
                            <div class="col-12">
                                <button name="action_view_subscriptions" type="object" 
                                        string="View Subscriptions" class="btn btn-primary"/>
                                <button name="action_view_usage_dashboard" type="object" 
                                        string="Usage Dashboard" class="btn btn-info"/>
                            </div>
                        </div>
                        <field name="subscription_user_ids" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="plan_id"/>
                                <field name="state"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="sales_orders_count"/>
                                <field name="invoices_count"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Extend User Tree View -->
        <record id="view_users_tree_subscription" model="ir.ui.view">
            <field name="name">res.users.tree.subscription</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='login']" position="after">
                    <field name="active_subscription_id" optional="show"/>
                    <field name="total_sales_orders" optional="show"/>
                    <field name="total_invoices" optional="show"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 